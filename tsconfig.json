{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": [
        "src/app/*",
        "src/app/redux/*"
      ]
    },
    "outDir": "build",
    "module": "commonjs",
    "target": "es5",
    "lib": ["es2017", "dom"],
    "allowJs": true,
    "sourceMap": true,
    "inlineSourceMap": false,
    "inlineSources": false,
    "experimentalDecorators": true,
    "jsx": "react",
    "moduleResolution": "node"
  },
  "types": [
    "node",
    "react",
    "react-dom",
    "redux",
    "react-router"
  ],
  "exclude": [
    "node_modules",
    "build",
    "typings/main",
    "typings/main.d.ts"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useCache": true,
    "useBabel": true
  }
}
